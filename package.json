{
  "name": "sql-qb",
  "version": "1.0.0",
  "description": "Sql query builder for pg for educational purposes",
  "main": "./src/index.js",
  "scripts": {
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint-fix": "tslint --fix -c tslint.json -p tsconfig.json",
    "test": "mocha -r ts-node/register  --watch tests/**/*.test.ts"
  },
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/rs-hub/sql-query-builder"
  },
  "tags": [
    "sql",
    "query",
    "builder",
    "postgresql"
  ],
  "author": "rs-hub",
  "license": "ISC",
  "nodemonConfig": {
    "ext": "ts,tsx,yml",
    "watch": [
      "src/**/*",
      "api-docs/"
    ],
    "exec": "node --inspect -r ts-node/register ./src/example.ts"
  },
  "dependencies": {
    "@types/chai": "^4.2.3",
    "@types/pg": "^7.11.2",
    "chai": "^4.2.0",
    "dotenv": "^8.1.0",
    "husky": "^3.0.9",
    "pg": "^7.12.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tslint-fix && npm run tslint && npm run test"
    }
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "mocha": "^6.2.1"
  }
}
